@using CodErator.Model
@using CodErator.GenerateHelper
@{
	Table table = (Table)Model;
	string className = table.TableNale;
	List<Column> columns = table.Columns;
}
package entity;

public class @className {

@foreach (Column c in columns)
{
	string output = string.Format(@"
	private {0} {1};
	", TemplateMethod.GetDataType(c.DataType), c.ColumnName);

	@(output)
}

@foreach (Column c in columns)
{
	string output = string.Format(@"
	public {0} get{1}() {
		return this.{2};
	}

	public void set{3}({4} {5}) {
		this.{6} = {7};
	}

	",
	TemplateMethod.GetDataType(c.DataType),
	c.ColumnName,
	c.ColumnName,
	c.ColumnName,
	TemplateMethod.GetDataType(c.DataType),
	c.ColumnName,
	c.ColumnName,
	c.ColumnName);

	@(output)
}

}
